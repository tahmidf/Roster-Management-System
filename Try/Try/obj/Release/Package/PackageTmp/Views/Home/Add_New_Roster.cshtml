                        id: id,
                        saturday: daySelect
                    }
                    EmployeeData.push(dayTemp);
                }
                else {
                    EmployeeData[index].saturday = daySelect;
                }
                break;
            default:
                alert("Somthing went wrong!");
                break;
        }
    }
    
